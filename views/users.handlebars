<form id="searchusers" action="/users" method="post">
    <h3>Search for Users</h3>
    Username: <input type="text" name="username" placeholder="">
    First name: <input type="text" name="fname" placeholder="">
    Last name: <input type="text" name="lname" placeholder="">
    <input type="submit" value="Submit" class="btn btn-primary">
 </form>
<br />

<h3>Users</h3>
{{#if users}}
<p class="text-secondary font-italic">Click on a user's profile picture to view that user's reviews.</p>
<table class="table">
    <thead>
        <th>Profile Picture</th>
        <th>User ID</th>
        <th>Username</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Join Date</th>
    </thead>
    <tbody>
        {{#each users}}
        <tr>
            <td><a href="/users/{{userID}}"><img src="{{userPicture}}" class="book-cover-pic"/></a></td>
            <td>{{userID}}</td>
            <td>{{username}}</td>
            <td>{{userFirstName}}</td>
            <td>{{userLastName}}</td>
            <td>{{formatDate userCreationDate}}</td>
        </tr>
        {{/each}}
    </tbody>
</table>
{{else}}
<p>
  No users found.
</p>
{{/if}}
