<h3>Add an author</h3>
<form id="addauthor" action="/authors" method="post">
    First name: <input type="text" name="fname" required>
    Last name: <input type="text" name="lname" required>
    City: <input type="text" name="city">
    State: <input type="text" name="state">
    Country: <input type="text" name="country">
    <input type="submit" value="Submit">
 </form>
<br/>

<h3>Authors</h3>
<table class="table">
    <thead>
        <th>Author ID</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>City</th>
        <th>State</th>
        <th>Country</th>
    </thead>
    <tbody>
        {{#each authors}}
        <tr>
            <td>{{authorID}}</td>
            <td>{{authorFirstName}}</td>
            <td>{{authorLastName}}</td>
            <td>{{authorCity}}</td>
            <td>{{authorState}}</td>
            <td>{{authorCountry}}</td>
            <td><a href="/authors/{{authorID}}">View Books</a></td>
        </tr>
        {{/each}}
    </tbody>
</table>
