<form id="addauthor" action="/authors" method="post">
    <h3>Add an author</h3>
    First name: <input type="text" name="fname" required>
    Last name: <input type="text" name="lname" required>
    <input type="submit" value="Submit" class="btn btn-primary">
 </form>
<br/>

<h3>Authors</h3>
<p class="text-secondary font-italic">Click on an author's first name to view books by that author.</p>
<table class="table">
    <thead>
        <th>Author ID</th>
        <th>First Name</th>
        <th>Last Name</th>
    </thead>
    <tbody>
        {{#each authors}}
        <tr>
            <td>{{authorID}}</td>
            <td><a href="/authors/{{authorID}}">{{authorFirstName}}</a></td>
            <td>{{authorLastName}}</td>
        </tr>
        {{/each}}
    </tbody>
</table>
